" 平台配置.
source $HOME/vim/platforms.vim

" 初始化插件
source $HOME/vim/vundle.vim

" 主题配置
source $HOME/vim/vimui.vim

" 通用配置.
source $HOME/vim/config.vim

" 编译和链接.
source $HOME/vim/acm.vim

